<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Conference
                </div>
                <div class="panel-body">
                    <div class="input-group">
                        <span id="newMeetingUriDescription" class="input-group-addon">Meeting URI</span>
                        <input id="meetingUri" class="form-control" placeholder="no active meeting" value="@ViewData["meetingUri"]" aria-describedby="newMeetingUriDescription" readonly />
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Device Manager
                </div>
                <div class="panel-body">
                    <div class="device-manager">
                        <div class="input-group">
                            <span id="spksDescription" class="input-group-addon">Speakers:</span>
                            <select id="spks" class="form-control" placeholder="" aria-describedby="spksDescription"></select>
                        </div>
                        <div class="input-group">
                            <span id="micsDescription" class="input-group-addon">Microphones:</span>
                            <select id="mics" class="form-control" placeholder="" aria-describedby="micsDescription"></select>
                        </div>
                        <div class="input-group">
                            <span id="camsDescription" class="input-group-addon">Cameras:</span>
                            <select id="cams" class="form-control" placeholder="" aria-describedby="camsDescription"></select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Conference Video
                        </div>
                        <div class="panel-body">
                            <div class="conversation">
                                <div class="av-container">
                                    <div id="renderWindow" class="render-window"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Self
                        </div>
                        <div class="panel-body">
                            <div class="conversation">
                                <div id="av-self" class="av-container">
                                    <div id="previewWindow" class="render-window"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <environment names="Development">
        <script src="~/js/skype-conference-joinwithtoken.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/skype-conference-joinwithtoken.min.js" asp-append-version="true"></script>
    </environment>
}
